            <div className="text-sm text-gray-600">
              <div>{entityType} • {taxRegime}</div>
              <div className="mt-1 text-gray-500">{address}</div>
            </div>
            
            <div className="pt-3 border-t border-gray-100">
              <div className="flex items-center justify-between">
                <div className="flex items-center gap-2">
                  <button
                    onClick={onToggleAutoInvoicing}
                    className="focus:outline-none"
                    aria-label={automaticInvoicing ? "Desactivar facturas automáticas" : "Activar facturas automáticas"}
                  >
