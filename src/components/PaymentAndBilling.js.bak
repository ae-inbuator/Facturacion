export function PaymentAndBilling({ 
  // Payment props
  cardNumber,
  cardHolderName,
  nextChargeDate,
  nextChargeAmount,
  paymentStatus = 'upToDate',
  hasMultipleCards = false,
  onChangePayment,
  
  // Billing props
  hasInvoiceData = false,
  companyName,
  rfc,
  taxRegime,
  entityType,
  address,
  automaticInvoicing = false,
  onConfigureInvoicing,
  onModifyInvoicing,
  onToggleAutoInvoicing
}) {
  const detectedCardType = getCardType(cardNumber);
  const CardLogo = CardLogos[detectedCardType] || CardLogos.generic;
  
  // Para móvil, dividir en 2 líneas
  const isMobile = window.innerWidth < 768;
  
  if (!hasInvoiceData) {
    // Estado cuando no hay datos fiscales configurados
    return (
      <div className="bg-white rounded-xl shadow-sm mb-8">
        <div className="grid grid-cols-1 md:grid-cols-2 divide-y md:divide-y-0 md:divide-x divide-gray-200">
          {/* Método de pago */}
          <div className="p-6">
            <h3 className="text-sm font-medium text-gray-500 mb-4">Método de pago</h3>
            <div className="space-y-4">
              <div className="flex items-start gap-3">
                <CardLogo />
                <div className="flex-1">
                  <div className="font-medium text-gray-900 flex items-center gap-2">
                    <span>{cardNumber}</span>
                    {paymentStatus === 'failed' && (
                      <span className="inline-flex items-center gap-1 text-xs text-red-600 font-normal">
                        <div className="w-1.5 h-1.5 rounded-full bg-red-500 animate-pulse"></div>
                        Rechazada
                      </span>
                    )}
                  </div>
                  <div className="text-sm text-gray-500">{cardHolderName}</div>
                  {hasMultipleCards && (
                    <button 
                      onClick={onChangePayment}
                      className="mt-2 text-xs text-blue-600 hover:text-blue-700 inline-flex items-center gap-1"
                    >
                      Ver más tarjetas
                      <ChevronRight size={12} />
                    </button>
                  )}
                </div>
              </div>
              
              {paymentStatus === 'upToDate' && nextChargeDate && (
                <div className="pt-3 border-t border-gray-100">
                  <div className="flex items-baseline justify-between">
                    <span className="text-sm text-gray-500">Próximo cargo:</span>
                    <div className="text-right">
                      <div className="text-sm text-gray-600">{nextChargeDate}</div>
                      {nextChargeAmount && (
                        <div className="text-lg font-semibold text-gray-900">{nextChargeAmount}</div>
                      )}
                    </div>
                  </div>
                </div>
              )}
              
              <button 
                onClick={onChangePayment}
                className="inline-flex items-center gap-1.5 text-sm text-blue-600 hover:text-blue-700 font-medium transition-colors"
              >
                <PencilLine size={14} />
                Cambiar método de pago
              </button>
            </div>
          </div>
          
          {/* Datos de facturación - Estado vacío */}
          <div className="p-6">
            <h3 className="text-sm font-medium text-gray-500 mb-4">Datos de facturación</h3>
            <div className="bg-amber-50 rounded-lg p-4 mb-4">
              <div className="flex gap-3">
                <AlertCircle className="text-amber-600 mt-0.5 flex-shrink-0" size={20} />
                <div>
                  <p className="text-sm font-medium text-amber-900">Configura tus datos fiscales</p>
                  <p className="text-sm text-amber-700 mt-1">
                    Necesitas agregar tu información fiscal para recibir facturas automáticas y cumplir con el SAT.
                  </p>
                </div>
              </div>
            </div>
            <button
              onClick={onConfigureInvoicing}
              className="w-full px-4 py-2.5 bg-red-500 text-white rounded-lg font-medium hover:bg-red-600 transition-colors inline-flex items-center justify-center gap-2"
            >
              <Building2 size={18} />
              Configurar ahora
            </button>
          </div>
        </div>
      </div>
    );
  }
  
  // Estado normal con datos fiscales
  return (
    <div className="bg-white rounded-xl shadow-sm mb-8">
      <div className="grid grid-cols-1 md:grid-cols-2 divide-y md:divide-y-0 md:divide-x divide-gray-200">
        {/* Método de pago */}
        <div className="p-6">
          <h3 className="text-sm font-medium text-gray-500 mb-4">Método de pago</h3>
          <div className="space-y-4">
            <div className="flex items-start gap-3">
              <CardLogo />
              <div className="flex-1">
                <div className="font-medium text-gray-900 flex items-center gap-2">
                  <span>{cardNumber}</span>
                  {paymentStatus === 'failed' && (
                    <span className="inline-flex items-center gap-1 text-xs text-red-600 font-normal">
                      <div className="w-1.5 h-1.5 rounded-full bg-red-500 animate-pulse"></div>
                      Rechazada
                    </span>
                  )}
                </div>
                <div className="text-sm text-gray-500">{cardHolderName}</div>
                {hasMultipleCards && (
                  <button 
                    onClick={onChangePayment}
                    className="mt-2 text-xs text-blue-600 hover:text-blue-700 inline-flex items-center gap-1"
                  >
                    Ver más tarjetas
                    <ChevronRight size={12} />
                  </button>
                )}
              </div>
            </div>
            
            {paymentStatus === 'upToDate' && nextChargeDate && (
              <div className="pt-3 border-t border-gray-100">
